<div id="blog_entry_container">
  <div id="blog_entry_entry">
    <h1><%= @blog_entry.title %></h1>

    <div class="blog_entry_details">
      <span class="blog_entry_date"><%= l(@blog_entry.published_at, :format => :blog_date) %></span>
      <% unless @blog_entry.author.blank? %>
        <%= Spree.t(:by) %> <%= link_to @blog_entry.author.nickname, blog_author_path(:author => @blog_entry.author.nickname), class: "blog_entry_author" %>
      <% end %>
    </div>

    <div class="blog_entry_body">
      <%== @blog_entry.body %>
    </div>

    <% unless @blog_entry.tag_list.empty? %>
      <%= render :partial => 'spree/blog_entries/tag_list', :locals => {:e => @blog_entry}  %>
    <% end %>
  </div>

  <%= render :partial => 'spree/blog_entries/comments', :locals => {:e => @blog_entry}  %>
</div> 

<% content_for :sidebar do %>
  <%= render :partial => 'spree/blog_entries/sidebar_show' %>
<% end %>

<% content_for :head do %>
  <% if !@blog_entry.author.blank? and !@blog_entry.author.google_plus_url.blank? %>
    <link rel="author" href="<%= @blog_entry.author.google_plus_url %>"/>
  <% end %>
<% end %>
