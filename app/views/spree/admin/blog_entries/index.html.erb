<% content_for :page_actions do %>  
  <li><%= button_link_to t("new_blog_entry"), new_object_url, :icon => 'icon-plus' %></li>
<% end %>

<% content_for :page_title do %>
   <%= t("blog_entries") %>
<% end %>

<% if @blog_entries.any? %>
  <table class="index">
    <thead>
      <tr>
        <th class="date"><%= Spree::BlogEntry.human_attribute_name(:published_at) %></th>
        <th class="title"><%= Spree::BlogEntry.human_attribute_name(:title) %></th>
        <th class=""><%= t('path') %></th>
        <th class=""><%= Spree::BlogEntry.human_attribute_name(:visible) %></th> 
        <th class="actions"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @blog_entries.each do |blog_entry| %>
        <tr class="<%= cycle('odd', 'even') %>" id="<%= dom_id blog_entry %>">
          <td><%= l( blog_entry.published_at, :format => :blog_date) if blog_entry.published_at %></td>
          <td><%= blog_entry.title %></td>
          <td><%= link_to blog_entry_permalink(blog_entry), blog_entry_permalink(blog_entry) %></td>
          <td class="align-center">
            <%= content_tag(:i, '', :class => 'icon-ok green') if blog_entry.visible %>
          </td> 
          <td class="actions">
            <%= link_to_edit blog_entry, :no_text => true %>
            <%= link_to_delete blog_entry, :no_text => true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @blog_entries %>
<% else %>
  <p><%= t('no_blog_entries') %></p>
<% end %>

