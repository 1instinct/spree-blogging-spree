<% content_for :head do %>
  <%= javascript_include_tag 'news_archive_widget' %>
<% end %>

<ul id="news-archive">
<% news_archive.each do |year, months_with_entries| %>
  <li class="year"><%= year %>
    <ul class="months">
    <% months_with_entries.each do |month, entries| %>
      <li><%= month %>
        <ul class="posts">
        <% entries.each do |entry| %>
          <li><%= link_to(entry.title, blog_entry_path(entry)) %></li>
        <% end %>
        </ul>
      </li>
    <% end %>
    </ul>
  </li>
<% end %>
</ul>
