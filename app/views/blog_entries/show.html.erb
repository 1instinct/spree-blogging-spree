<% content_for :head do %>    
  <%= javascript_include_tag 'news_archive_widget' %>
  <%= stylesheet_link_tag 'blog' %>
<% end %>

<div id="blog-container">
  <ul id="blog-entries">
    <li class="blog_entry">
      <%= render :partial => 'blog', :locals => {:e => @blog_entry} %>
    </li>
  </ul>
  <br class="clearfloat">
</div> 

<% content_for :sidebar do %>
  <div id="blog-sidebar">
    <%= render :partial => 'news_archive', :object => @news_archive %>
   </div>
<% end %>        